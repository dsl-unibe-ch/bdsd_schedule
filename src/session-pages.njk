---
pagination:
  data: session_names
  size: 1
  alias: session_name
permalink: "sessions/{{ session_name.id }}"
eleventyComputed:
  title: "{{ session_name.title }}"
layout: layouts/bdsd
date: Last Modified
---
<div class="my-2"><a class="font-semibold" href="/">&lt; Back to Main Schedule</a></div>

<h2 class="my-4 font-semibold">{{ session_name.title }}</h2>

{% set session = sessions[session_name.id] %}
{% for room_track in session.room_tracks %}

<h3 class="my-4 font-semibold">Room {{ room_track.room }}</h3>
<table class="mx-auto min-w-[80%]">
  <thead>
    <tr class="text-lg">
      <th class="bg-fuchsia-300">Time</th>
      <th class="bg-purple-300">Presentation</th>
    </tr>
  </thead>
  <tbody>
    {% set flip = false %}
    {% for time_record in room_track.times -%}
    {% set flip = not flip %}
    {% for item in time_record.subschedule -%}
    <tr data-id="{{ item.id }}" data-belongs-to="{{ item.belongs_to }}" class="odd:bg-purple-100 even:bg-white odd:print:bg-slate-100">
      {% if loop.index == 1 %}<td class="px-2 py-1.5 {% if flip %}bg-fuchsia-200 print:bg-slate-200{% else %}bg-fuchsia-100 print:bg-slate-100{% endif %}" rowspan="{{ loop.length }}">{{ item.time_string }}</td>{% endif %}
      <td class="px-2 py-1.5">
        <div class="flex flex-col">
          <div class="font-semibold">
            {% if item.children | length %}
            <a href="/{{ item.type }}">{{ item.title }}</a>
            {% else %}
            {{ item.title }}
            {% endif %}
          </div>
          {%- if item.presented_by %}<div class="text-slate-900 text-sm">{{ item.presented_by }}</div>{% endif %}
        </div>
      </td>
    </tr>
    {%- endfor %}
    {%- endfor %}
  </tbody>
</table>

{% endfor %}




<div class="mt-4 mb-2"><a class="font-semibold" href="/">&lt; Back to Main Schedule</a></div>